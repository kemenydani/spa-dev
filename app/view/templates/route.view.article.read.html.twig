    <style>
        .comment > .comment {
            padding-left: 40px;
        }

        .comment .content {
            display: flex;
            padding-top: 10px;
            padding-bottom: 10px;
        }

        .comment {
            padding-left: 40px;
        }

        .user-picture {
            background: #666;
            width: 40px;
            min-width: 40px;
            min-height: 40px;
            text-align: center;
            line-height: 40px;
            color: white;
            border-radius: 90px;
            height: 40px;
            margin-right: 10px;
        }

        .comment p {
            padding: 0;
            margin: 0;
            //padding-bottom: 10px;
            width: 100%;
        }

        .comment-reply {
            font-size: 12px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .comment .bottom {
            border-bottom: 1px solid #ccc;
            padding-bottom: 10px;
            margin-left:50px;
            margin-bottom: 20px;
        }

    </style>

    {% verbatim %}

        <script type='x-template' id='template-comment-tree'>
            <div class="comment-tree">
                <comment-tree-item v-bind:comment="comment" v-for="comment in comments" class="comment"></comment-tree-item>
            </div>
        </script>

        <script type='x-template' id='template-comment-tree-item'>
            <div class="comment">
                <div class="content">
                    <div class="user-picture">{{ comment.id }}</div>
                    <p>{{ comment.text }}</p>
                </div>
                <div class="bottom">
                    <span v-on:click="show_reply = !show_reply" class="comment-reply">Reply</span>
                    <input v-if="show_reply" type="text" placeholder="Write your reply..">
                </div>
                <comment-tree v-if="comment.ch" v-bind:comments="comment.ch"></comment-tree>
            </div>
        </script>

    {% endverbatim %}

