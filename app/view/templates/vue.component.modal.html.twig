

<!-- template for the modal component -->
<script type="text/x-template" id="modal-template">
    <transition name="modal">
        <div class="modal-mask">
            <div class="modal-wrapper">
                {% verbatim %}
                <div class="modal-container" v-bind:style="{ maxWidth: width, width: width, height: height,  maxHeight: height }">
                    
                    <div v-show="loading" class="modal-loading">
                        <i class="fas fa-circle-notch fa-spin"></i>
                        <span ref="modalMessage">{{ loadingMessage }}</span>
                    </div>
                    <div class="modal-header">
                        <slot name="header">
                            default header
                        </slot>
                        <div class="modal-cancel">
                            <i @click="$emit('close')" class="fas fa-times fa-lg"></i>
                        </div>
                    </div>
                    <div class="modal-body">
                        <slot name="body">
                            default body
                        </slot>
                    </div>
                    <div class="modal-footer">
                        <slot name="footer">
                            <button class="modal-default-button" @click="$emit('close')">
                                OK
                            </button>
                        </slot>
                    </div>
                </div>
                {% endverbatim %}
            </div>
        </div>
    </transition>
</script>
{% verbatim %}

<script>

    (function($, Vue)
    {
	    Vue.component('modal',
	    {
	    	props: {
	    		loadingMessage: '',
                loading: false,
                width : '600px',
                height : '450px',
	    	},
	    	watch: {

	    	},
		    template: '#modal-template',
		    beforeCreate : function()
		    {
		    	$('body').addClass('modal-open');
		    },
		    beforeDestroy : function()
		    {
                $('body').removeClass('modal-open');
		    },

		    mounted : function(){

            }

	    });

    }(jQuery, Vue));

</script>

{% endverbatim %}